page {
  height: 100%;
}

.container {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
}

.canvas_area {
  position: fixed;
  top: 10px;
  left: 10px;
  right: 10px;
  bottom: 157px;
  z-index: 10;
}

.myCanvas {
  width: 100%;
  height: 100%;
}

.canvas_tools {
  position: fixed;
  left: 0;
  bottom: 0rpx;
  width: 100%;
  height: 150rpx;
  background-color: transparent;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.box {
  width: 100rpx;
  height: 100rpx;
  margin: 27rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 110% 110%;
}

.penSlider {
  opacity: 0;
  position: fixed;
  bottom: 165rpx;
  left: 10rpx;
  right: 38.2%;
}

.colorbox {
  height: 50rpx;
  width: 50rpx;
  position: fixed;
  opacity: 0;
  border-radius: 50%;
  border-style: solid;
  border-width: 0px;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% 100%;
  right: 35rpx;
  bottom: 30rpx;
}

