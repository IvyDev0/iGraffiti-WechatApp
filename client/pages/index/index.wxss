/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}

.usermotto {
  margin-top: 200px;
}

.getininfo {
    position: fixed;
    left: 0;
    bottom: 0rpx;
    width: 100%;
    height: 300rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.getinfo {
  width: 330rpx;
  height: 110rpx;
}

.image {
    position: fixed;
    left: 0;
    bottom: 0rpx;
    width: 100%;
    height: 180rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.camera-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}